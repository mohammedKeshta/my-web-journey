extends ../layout/index

block content
  #speakerList.container
    .row
      .col-sm-8
        article.speakerslist
          .container
            .row
              each speaker in speakersList
                .col-sm-8
                  h3.speakerslist-title #{speaker.title}
                  h5.speakerslist-name
                    | with
                    a(href=`/speakers/${speaker.shortname}`)  #{speaker.name}
                  p.speakerslist-info
                    a(href=`/speakers/${speaker.shortname}`)
                      img.speakerslist-img.img-circle.pull-left(src=`${speaker.avatar}` alt=`Photo of  ${speaker.name}`)
                    | #{speaker.summary}
            // row
          // container
      // primary
      aside.col-sm-4
        article.sidebar
          include ../includes/artworks
      // secondary
